{% layout 'layout.liquid' %}
{% block content %}
    <!-- we need to account for two conditions here -->
    <!-- first, if we have movies in our array -->
    <!-- second, if there are no movies in the array -->
    {% if movies.length > 0 %}
        <div class="container-md">
            <h2>All Movies</h2>
            <div class="row">
                {% for movie in movies %}
                    <div class="card me-3 mb-3" style="width: 18rem;">
                        <h5 class="card-header">{{movie.name}}</h5>
                        <div class="card-body">
                            <h5 class="card-title">
                                {% if movie.isPgRated %}
                                    Dp not Watch
                                {% else %}
                                    Watch
                                {% endif %}
                            </h5>
                            <p class="card-text">The color of this {{movie.name}} is {{movie.color}}</p>
                            <div class="colorBox mb-2" style="background-color: {{movie.color}}"></div>
                            <a href="/movies/{{movie.id}}" class="btn btn-info">View {{movie.name}}</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% else %}
        <div class="container-md">
            <h2>No movies yet... Go create some!</h2>
        </div>
    {% endif %}
{% endblock %}