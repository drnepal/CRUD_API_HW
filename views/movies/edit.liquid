{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-sm">
        <form action="/movies/{{movie.id}}?_method=PUT" method="POST">
            <fieldset>
                <legend>Edit {{ movie.name }}</legend>
                <label class="form-label">Name:</label>
                <input 
                    type="text" class="form-control" 
                    name="name" placeholder="What kind of movie is it?"
                    required value="{{ movie.name }}"
                >
                <label class="form-label">Genre:</label>
                <input 
                    type="color" class="form-control" 
                    name="genre" placeholder="type of movie ?"
                    required value="{{ movie.genre }}"
                >
                <label class="form-label">PgRated:</label>
                <input 
                    type="checkbox" class="form-check-control" 
                    name="readyToEat"
                    {% if movie.isPgRated %}
                        checked
                    {% endif %}
                >
            </fieldset>
            <input type="submit" class="btn btn-success" value="Edit {{ movie.name }}">
            <a href="/movies/{{ movie.id }}" class="btn btn-warning">Back</a>
        </form>
    </div>
{% endblock %}